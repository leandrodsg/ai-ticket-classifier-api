APP_NAME="AI Ticket Classifier API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# Local: SQLite (default)
# Production: PostgreSQL (Supabase)
DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=ticket_classifier
# DB_USERNAME=postgres
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Cache Configuration (Database driver for both local and production)
CACHE_STORE=database
CACHE_PREFIX=ticket_classifier

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# ============================================
# AI TICKET CLASSIFIER - CUSTOM CONFIGURATION
# ============================================

# Security Bypass (DEVELOPMENT ONLY - NEVER set to true in production)
# Setting this to true will disable HMAC signature validation
# WARNING: This makes the API completely unsecured
BYPASS_SECURITY=false

# CSV Security
# Generate with: php artisan key:generate --show
CSV_SIGNING_KEY=

# OpenRouter AI Configuration
# Sign up at: https://openrouter.ai/
# Check rankings for latest free models: https://openrouter.ai/rankings
OPENROUTER_API_KEY=

# AI Models Configuration (update monthly from rankings)
AI_MODEL_PRIMARY=google/gemini-2.0-flash-exp:free
AI_MODEL_SECONDARY=mistralai/ministral-3b:free
AI_MODEL_TERTIARY=meta-llama/llama-3.2-3b-instruct:free

# AI Auto-Discovery (automatically finds new free models)
AI_AUTO_DISCOVERY=true
AI_CACHE_DRIVER=database

# OpenRouter Client Settings
OPENROUTER_TIMEOUT=10
OPENROUTER_MAX_RETRIES=2

# Rate Limiting
RATE_LIMIT_ENABLED=true
# CORS Configuration
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com